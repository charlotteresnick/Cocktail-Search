<div class="main-container">
  <div class="collections-container" action='/collections'>
    <h1>Your Collections</h1>
    <div class="collections-list">
      <% locals.collections.forEach(collection => { %>
        <a class="collection" href="collections/<%- collection.id %>">
          <h3 class="collection-name"><%- collection.name %> </h3>
        </a>
      <% }) %>
    </div>
    <form class="create-new-collection-form" method="POST" action="/collections">
      <input class="create-collection-input" type="text" name="name" placeholder="Enter new collection name">
      <input class="create-collection-submit" type="submit" value="Create">
    </form>
  </div>
</div>